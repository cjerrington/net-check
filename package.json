{
  "name": "net-check",
  "productName": "Network Status Check",
  "version": "1.0.6",
  "description": "A desktop app to check the status of a hostname or URL and port.",
  "main": "main.js",
  "repository": "https://github.com/cjerrington/net-check",
  "author": "Clayton Errington",
  "license": "MIT",
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-installer-windows": "^3.0.0",
    "electron-packager": "^14.2.1"
  },
  "scripts": {
    "start": "electron .",
    "start-mac": "/Applications/Electron.app/Contents/MacOS/Electron .",
    "package-win": "electron-packager . net-check --overwrite --platform=win32 --arch=ia32 --icon=app/icon.ico --prune=true --out=release-builds",
    "release": "electron-installer-windows --src release-builds/net-check-win32-ia32/ --dest release-builds/installers/ --icon app/icon.ico",
    "build": "npm run package-win && npm run release"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "bootstrap-icons": "^1.0.0-alpha3",
    "is-port-reachable": "^3.0.0",
    "is-reachable": "^4.0.0",
    "jquery": "^3.5.0",
    "moment": "^2.24.0",
    "pkginfo": "^0.4.1",
    "popper.js": "^1.14.7",
    "tether": "^1.4.0"
  },
  "standard": {
    "globals": [
      "$"
    ]
  }
}
